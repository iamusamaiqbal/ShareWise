<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".QR_activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http://192.168.1.10:4444"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE URL"
        android:background="@drawable/btn_background"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/divider"
            android:layout_width="120dp"
            android:layout_marginTop="10dp"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:background="@color/gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"/>
        <View
            android:id="@+id/divider_1"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_qrcode_svgrepo_com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scan the QR code"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <View
            android:id="@+id/divider_qr_1"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="3dp"
            android:layout_marginLeft="20dp"
            android:background="@color/gray" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"/>
        <View
            android:id="@+id/divider_qr"
            android:layout_width="150dp"
            android:layout_marginTop="10dp"
            android:layout_height="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:background="@color/gray" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_smartphone_with_wireless_internet_svgrepo_com"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable NFC and \nAndroid Beam to \n   share the URL"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            android:layout_gravity="center"/>
    </LinearLayout>



</LinearLayout>